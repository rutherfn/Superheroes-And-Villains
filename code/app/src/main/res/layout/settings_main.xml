<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/settingsCons"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/settingsMainImageView"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/spiderman" />

    <TextView
        android:id="@+id/settingsMainHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/settingsMainImageView"
        app:layout_constraintTop_toTopOf="@+id/settingsMainImageView" />

    <TextView
        android:id="@+id/settingsParagraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10sp"
        android:text="TextView"
        android:textSize="15sp"
        android:ems="13"
        app:layout_constraintStart_toEndOf="@+id/settingsMainImageView"
        app:layout_constraintTop_toBottomOf="@+id/settingsMainHeader" />

    <Switch
        android:id="@+id/changeDarkModeSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>